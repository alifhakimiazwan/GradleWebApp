<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>InputData</servlet-name>
        <servlet-class>GradleWebApp.InputData</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InputData</servlet-name>
        <url-pattern>/InputData</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DisplayContacts</servlet-name>
        <servlet-class>GradleWebApp.DisplayContacts</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayContacts</servlet-name>
        <url-pattern>/DisplayContacts</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>InputContactData</servlet-name>
        <servlet-class>GradleWebApp.InputContactData</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InputContactData</servlet-name>
        <url-pattern>/InputContactData</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
